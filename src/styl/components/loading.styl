.loading {
  fixed(0px, 0px);
  size(100%);
  z-index: 999;
  background: $thirdly;
  color: $white;

  &__inner {
    flexy(center, flex-start);
    padding-top: vh(350);
    text-align: center;
  }

  .title {
    font: 700 vh(20)/1.5 $font-base;
    text-transform uppercase;
    letter-spacing: 0.2em;
  }
}

.loader {
  .box {
    size(vh(500), vh(20));
    border: vh(2) solid rgba(#066484, 0.5);
    margin: 0 auto vh(40);
  }
  .line {
    absolute(0px, 0px);
    height: 100%;
    background: url('../img/loader.png') left center repeat-x,
                linear-gradient(to bottom, #3ac4dc, $primary);
    box-shadow: inset 0 vh(-4) vh(10) rgba($black, 0.5),
                0 vh(10) vh(50) rgba($primary, 0.7);
    animation runningBg 0.5s linear infinite;
  }
  .percentage {
    font: 700 vh(20)/1.5 $font-base;
    text-transform uppercase;
    letter-spacing: 0.2em;
    color: $primary;
    margin-top: vh(40);
  }
}

@keyframes runningBg {
  0% {
    background-position-x: 0, 0;
  }
  100% {
    background-position-x: 20px, 0;
  }
}