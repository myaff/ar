.loading {
  fixed(0px, 0px);
  size(100%);
  z-index: 999;
  background: $thirdly;
  color: $white;

  &__inner {
    flexy(center, center);
    text-align: center;
    height: 100%;
  }

  .title {
    font: 700 20px/1.5 $font-base;
    text-transform uppercase;
    letter-spacing: 0.2em;

    @media $mdHeight {
      font-size: vh(20);
    }
  }
}

.loader {
  .box {
    size(500px, 20px);
    border: 2px solid rgba(#066484, 0.5);
    margin: 0 auto 40px;

    @media $mdHeight {
      size(vh(500), vh(20));
      margin-bottom: vh(40);
      border-width: vh(2);
    }
  }
  .line {
    absolute(0px, 0px);
    height: 100%;
    background: url('../img/loader.png') left center repeat-x,
                linear-gradient(to bottom, #3ac4dc, $primary);
    box-shadow: inset 0 -4px 10px rgba($black, 0.5),
                0 10px 50px rgba($primary, 0.7);
    animation runningBg 0.5s linear infinite;

    @media $mdHeight {
      box-shadow: inset 0 vh(-4) vh(10) rgba($black, 0.5),
                  0 vh(10) vh(50) rgba($primary, 0.7);
    }
  }
  .percentage {
    font: 700 20px/1.5 $font-base;
    text-transform uppercase;
    letter-spacing: 0.2em;
    color: $primary;
    margin-top: 40px;

    @media $mdHeight {
      font-size: vh(20);
      margin-top: vh(40);
    }
  }
}

@keyframes runningBg {
  0% {
    background-position-x: 0, 0;
  }
  100% {
    background-position-x: 20px, 0;
  }
}