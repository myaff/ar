.nav {

  &__list {
    padding: 0;
    margin: 0;
    list-style: none;
  }
  &__item {
    display: block;
    padding: 0;
    margin: vh(20);
  }
  &__link {
    display: block;
    text-align: center;
    font: 700 vh(30)/1 $font-base;
    text-transform: uppercase;
    letter-spacing 0.35em;
    padding: vh(8);
    color: $white;
    text-shadow: vh(5) vh(7) 0 rgba($white, 0.15);
  }
}

.nav-icons {
  margin-top: vh(80);

  &__list {
    padding: 0;
    margin: 0;
    list-style: none;
    flexy(center, center);
  }

  &__item {
    flex: 0 0 vh(48);
    margin: vh(11);
  }

  &__link {
    border: 1px solid currentColor;
    flexy(center, center);
    size(vh(48))
    font-size: vh(30);
    box-sizing: border-box;

    a& {
      color: $primary;
    }
  }
}

.btn-menu {
  size(vh(80), vh(66));
  z-index: 10;
  cursor: pointer;

  div {
    absolute(50%);
    right: 0;
    height: vh(4);
    background: currentColor;
    border-radius: vh(2);
    transition: transform 0.3s, width 0.3s;
    transform-origin: center;

    &:first-child {
      transform: translateY(vh(-20));
      width: 100%;
    }

    &:nth-child(2) {
      width: 75%;
    }

    &:last-child {
      transform: translateY(vh(20));
      width: 42.5%;
    }
  }

  &:hover div {
    &:nth-child(2),
    &:last-child {
      width: 100%;
    }
  }

  &.is-open {
    div {
      &:first-child {
        transform: translateY(0) rotate(45deg);
      }
      &:nth-child(2) {
        transform: scaleX(0);
      }
      &:last-child {
        transform: translateY(0) rotate(-45deg);
        width 100%
      }
    }
  }
}