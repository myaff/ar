.nav {

  &__list {
    padding: 0;
    margin: 0;
    list-style: none;
  }
  &__item {
    display: block;
    padding: 0;
    margin: 20px;

    @media $mdHeight {
      margin: vh(20);
    }
  }
  &__link {
    display: block;
    text-align: center;
    font: 700 30px/1 $font-base;
    text-transform: uppercase;
    letter-spacing 0.35em;
    padding: 8px;
    color: $white;
    text-shadow: 5px 7px 0 rgba($white, 0.15);

    @media $mdHeight {
      font-size: vh(30);
      padding: vh(8);
      text-shadow: vh(5) vh(7) 0 rgba($white, 0.15);
    }
  }
}

.nav-icons {
  margin-top: 80px;

  @media $mdHeight {
    margin-top: vh(80);
  }

  &__list {
    padding: 0;
    margin: 0;
    list-style: none;
    flexy(center, center);
  }

  &__item {
    flex: 0 0 48px;
    margin: 11px;

    @media $mdHeight {
      flex-basis: vh(48);
      margin: vh(11);
    }
  }

  &__link {
    border: 1px solid currentColor;
    flexy(center, center);
    size(48px)
    font-size: 30px;
    box-sizing: border-box;

    @media $mdHeight {
      size(vh(48));
      font-size: vh(30);
    }

    a& {
      color: $primary;
    }
  }
}

.btn-menu {
  size(80px, 66px);
  z-index: 10;
  cursor: pointer;

  @media $mdHeight {
    size(vh(80), vh(66));
  }

  div {
    absolute(50%);
    right: 0;
    height: 4px;
    background: currentColor;
    border-radius: 2px;
    transition: transform 0.3s, width 0.3s;
    transform-origin: center;

    @media $mdHeight {
      height: vh(4);
      border-radius: vh(2);
    }

    &:first-child {
      transform: translateY(-20px);
      width: 100%;

      @media $mdHeight {
        transform: translateY(vh(-20));
      }
    }

    &:nth-child(2) {
      width: 75%;
    }

    &:last-child {
      transform: translateY(20px);
      width: 42.5%;

      @media $mdHeight {
        transform: translateY(vh(20));
      }
    }
  }

  &:hover div {
    &:nth-child(2),
    &:last-child {
      width: 100%;
    }
  }

  &.is-open {
    div {
      &:first-child {
        transform: translateY(0) rotate(45deg);
      }
      &:nth-child(2) {
        transform: scaleX(0);
      }
      &:last-child {
        transform: translateY(0) rotate(-45deg);
        width 100%
      }
    }
  }
}